{
    "manifest_version": 2,

    "name": "Zirconium Fish",
    "description": "Mr Zirconium Fish at your service.",
    "version": "0.1",
    
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*",
        "file:///*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "incognito": "split",
    "web_accessible_resources": [
        "js/jquery-2.0.3.js",
        "js/content-scripts/zirconium.chrome.content.js"        
    ],
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    }
}